{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      // esModuleInterop позволяет использовать обычные import в webpack.config.ts
      "esModuleInterop": true,
      // позволяет импортировать без *
      "allowSyntheticDefaultImports": true,
    },

    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    }

  }